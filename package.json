{
  "name": "zephyr",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "agent"
  ],
  "scripts": {
    "zephyr": "bun run packages/cli/src/bin.ts",
    "build": "bun build packages/cli/src/bin.ts --outdir dist --target bun",
    "build:agent": "bun run images/build.ts --agent",
    "build:images": "bun run images/build.ts --all",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
